<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chp7___Master_Layout_in_DotNetCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chp7___Master_Layout_in_DotNetCore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div style="width: 100%; height: 80px; background-color: #2c3e50; color: white; display: flex; justify-content: space-between; align-items: center; padding: 0 20px; box-sizing: border-box;">
            <h1 style="margin: 0; font-family: Arial, sans-serif;">Website Header</h1>
            <nav style="display: flex; gap: 20px;">
                <a asp-controller="Home" asp-action="Index" style="color: white; text-decoration: none;">Home</a>
                <a asp-controller="Home" asp-action="About" style="color: white; text-decoration: none;">About</a>
                <a asp-controller="Home" asp-action="Contact" style="color: white; text-decoration: none;">Contact</a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Div -->
    <div style="width: 100%; height: 60px; background-color: #34495e; color: white; display: flex; justify-content: center; align-items: center; position: fixed; bottom: 0; left: 0; box-sizing: border-box;">
        <p style="margin: 0; font-family: Arial, sans-serif;">&copy; 2023 My Website. All Rights Reserved.</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
